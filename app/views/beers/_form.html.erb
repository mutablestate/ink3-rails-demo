<div class="column-group gutters">
  <div class="all-50 small-100 tiny-100">
    <div class="ink-form">
      <%= form_for(@beer) do |f| %>
        <% if @beer.errors.any? %>
          <div id="error_explanation">
            <h2><%= pluralize(@beer.errors.count, "error") %> prohibited this beer from being saved:</h2>
            <ul>
              <% @beer.errors.full_messages.each do |message| %>
                <li><%= message %></li>
              <% end %>
            </ul>
          </div>
        <% end %>

        <div class="control-group">
          <%= f.label :name %>
          <div class="control">
            <%= f.text_field :name %>
          </div>
        </div>
        <div class="control-group">
          <%= f.label :description %>
          <div class="control">
            <%= f.text_area :description %>
          </div>
        </div>
        <div class="control-group">
          <%= f.label :consumption_date %>
          <div class="control">
            <%= f.text_field(:consumption_date, id: "myDatePicker", class: "ink-datepicker") %>
          </div>
        </div>

        <div class="actions">
          <%= f.submit(class: 'ink-button') %>
        </div>
      <% end %>
    </div>
  </div>

  <div class="all-50 small-100 tiny-100">
    <p>Wrap forms in the ink-form class</p>
  </div>
</div>
